<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhc.employee_management.mapper.SkillMapper">

    <resultMap id="BaseResultMap" type="com.jhc.employee_management.entity.Skill">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="add1" property="add1" />
        <result column="add2" property="add2" />
        <result column="add3" property="add3" />
    </resultMap>

    <sql id="Base_Column_List">
        id, name, description, created_at, updated_at, add1, add2, add3
    </sql>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM skill
        WHERE id = #{id}
    </select>
    
    <insert id="insert" parameterType="com.jhc.employee_management.entity.Skill" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO skill (
            name, description, created_at, updated_at, add1, add2, add3
        ) VALUES (
            #{name}, #{description}, #{createdAt}, #{updatedAt}, #{add1}, #{add2}, #{add3}
        )
    </insert>

    <update id="updateById" parameterType="com.jhc.employee_management.entity.Skill">
        UPDATE skill
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="description != null and description != ''">description = #{description},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
            <if test="add1 != null and add1 != ''">add1 = #{add1},</if>
            <if test="add2 != null and add2 != ''">add2 = #{add2},</if>
            <if test="add3 != null and add3 != ''">add3 = #{add3},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM skill
        WHERE id = #{id}
    </delete>
    
</mapper>