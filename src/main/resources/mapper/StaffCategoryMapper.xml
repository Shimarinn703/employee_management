<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

        
<mapper namespace="com.jhc.employee_management.mapper.StaffCategoryMapper">

    <resultMap id="BaseResultMap" type="com.jhc.employee_management.entity.StaffCategory">
        <id column="id" property="id" />
        <result column="employee_id" property="employeeId" />
        <result column="get_ymd" property="getYmd" />
        <result column="category_id" property="categoryId" />
        <result column="category_name" property="categoryName" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="add1" property="add1" />
        <result column="add2" property="add2" />
        <result column="add3" property="add3" />
    </resultMap>

    <sql id="Base_Column_List">
        id, employee_id, get_ymd, category_code, created_at, updated_at, add1, add2, add3
    </sql>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM staffcategory
        WHERE id = #{id}
    </select>
    
    <resultMap id="selectResultMap" type="com.jhc.employee_management.entity.StaffCategory">
        <result column="category_id" property="categoryId" />
        <result column="category_name" property="categoryName" />
        <result column="get_ymd" property="getYmd" />
    </resultMap>
    
    <select id="selectByEmployeeId" parameterType="java.lang.Long" resultMap="selectResultMap">
        SELECT
          category_id, 
          category_name,
          get_ymd
        FROM staffcategory
          WHERE employee_id = #{employeeId}
    </select>
    
    <insert id="insert" parameterType="com.jhc.employee_management.entity.StaffCategory" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO staffcategory (
            employee_id, get_ymd, category_id, category_name, created_at, updated_at, add1, add2, add3
        ) VALUES (
            #{employeeId}, #{getYmd}, #{categoryId}, #{categoryName}, #{createdAt}, #{updatedAt}, #{add1}, #{add2}, #{add3}
        )
    </insert>

    <update id="updateById" parameterType="com.jhc.employee_management.entity.StaffCategory">
        UPDATE staffcategory
        <set>
            <if test="employeeId != null">employee_id = #{employeeId},</if>
            <if test="getYmd != null">get_ymd = #{getYmd},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
            <if test="add1 != null and add1 != ''">add1 = #{add1},</if>
            <if test="add2 != null and add2 != ''">add2 = #{add2},</if>
            <if test="add3 != null and add3 != ''">add3 = #{add3},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM staffcategory
          WHERE employee_id = #{employeeId}
    </delete>
    
</mapper>