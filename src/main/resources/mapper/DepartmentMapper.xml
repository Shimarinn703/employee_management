<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhc.employee_management.mapper.DepartmentMapper">

    <resultMap id="BaseResultMap" type="com.jhc.employee_management.entity.Department">
            <id property="id" column="id" />
            <result property="branchId" column="branch_id" />
            <result property="name" column="name" />
            <result property="createdAt" column="created_at" />
            <result property="updatedAt" column="updated_at" />
            <result property="add1" column="add1" />
            <result property="add2" column="add2" />
            <result property="add3" column="add3" />
    </resultMap>
    
    <resultMap id="selectResultMap" type="com.jhc.employee_management.entity.Department">
            <result property="branch_id" column="branchId" />
            <result property="branch_name" column="branchName" />
            <result property="department_id" column="departmentId" />
            <result property="department_name" column="departmentName" />
    </resultMap>

    
    <select id="selectAllData" resultMap="selectResultMap">
        SELECT
          A.id as branch_id, 
          A.name as branch_name, 
          B.id as department_id, 
          B.name as department_name
        FROM Branch A left join department B on A.id = B.branch_id
          order by A.id, B.id
    </select>
    
    <sql id="Base_Column_List">
        id,branch_id,name,created_at,updated_at,add1,
        add2,add3
    </sql>
</mapper>
